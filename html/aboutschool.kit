        <section id="staff-school" class="staff-school wrapper section-padding">
            <h2 class="section-heading" id="staff-school">Kadra szkoły</h2>

            <button id="left" class="staff-school__btn">⮜</button>

            <ul class="staff-school__carousel">

                <li class="staff-school__card">
                    <div class="staff-school__box">
                        <img src="dist/img/teachers/teacher-1.jpg" alt="Teacher picture" draggable="false" class="staff-school__img">
                    </div>
                    <h3 class="staff-school__title">Blanche Pearson</h3>
                    <span>Nauczyciel j. polskiego</span>
                </li>
                <li class="staff-school__card">
                    <div class="staff-school__box">
                        <img src="dist/img/teachers/teacher-2.jpg" alt="Teacher picture" draggable="false" class="staff-school__img">
                    </div>
                    <h3 class="staff-school__title">James Khosravi</h3>
                    <span>Nauczyciel j. angielskiego</span>
                </li>
                <li class="staff-school__card">
                    <div class="staff-school__box">
                        <img src="dist/img/teachers/teacher-3.jpg" alt="Teacher picture" draggable="false" class="staff-school__img">
                    </div>
                    <h3 class="staff-school__title">Lariach French</h3>
                    <span>Nauczyciel biologi</span>
                </li>
                <li class="staff-school__card">
                    <div class="staff-school__box">
                        <img src="dist/img/teachers/teacher-4.jpg" alt="Teacher picture" draggable="false" class="staff-school__img">
                    </div>
                    <h3 class="staff-school__title">Joenas Brauners</h3>
                    <span>Nauczyciel mechaniki</span>
                </li>
                <li class="staff-school__card">
                    <div class="staff-school__box">
